<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/changeLanguage"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSettingsTitle"
        android:columnCount="2"
        android:rowCount="3">
        <ImageView
            android:id="@+id/ivEnglish"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/english"
            android:layout_margin="40dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dice"
        />

        <ImageView
            android:id="@+id/ivChines"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/china"
            android:layout_margin="40dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dice"
            />

        <ImageView
            android:id="@+id/ivDutch"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/dutch"
            android:layout_margin="40dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dice"
        />

        <ImageView
            android:id="@+id/ivFrench"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/french"
            android:layout_margin="40dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dice"
            />

        <ImageView
            android:id="@+id/ivGerman"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/german"
            android:layout_margin="40dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dice"
        />

        <ImageView
            android:id="@+id/ivDanish"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/danish"
            android:layout_margin="40dp"
            android:maxWidth="100dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dice"
            />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>